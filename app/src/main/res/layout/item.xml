<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="100dp"
        android:text="Facebook"
        android:textSize="25sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/show_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="13dp"
        android:text="Show"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"/>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#1a1a1a"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.1"/>
    <RelativeLayout
        android:layout_below="@id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/l_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/login"
            android:layout_below="@id/l_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+9989987654321"
            android:layout_marginTop="3dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimaryDark"
            android:alpha="0.1"/>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/p_Text"
            android:layout_below="@id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/password"
            android:layout_below="@id/p_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4045879aaa"
            android:layout_marginTop="3dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimaryDark"
            android:alpha="0.1"/>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/c_Text"
            android:layout_below="@id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/comment"
            android:layout_below="@id/c_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4045879aaa"
            android:layout_marginTop="3dp"
            android:textSize="20sp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimaryDark"
            android:alpha="0.1"/>

    </RelativeLayout>
</RelativeLayout>